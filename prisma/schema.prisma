generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum StatusAkun {
  Pelaksana
  Mahasiswa
}

enum TypeCalon {
  TI
  SI
  BEM
}

model Pemilih {
  id            String     @id @default(uuid())
  npm           String?
  nama          String?
  Prodi         String?
  role          String?
  status_hmp    Boolean    @default(false)
  status_bem    Boolean    @default(false)
  status_akun   StatusAkun @default(Mahasiswa)
  refresh_token String?

  votingCalon VotingCalon[]
}

model Calon {
  id        String    @id @default(uuid())
  nama      String
  visi      String
  misi      String
  prodi     String
  foto      String
  angkatan  Int
  tgl_lahir DateTime
  no_urut   Int
  type      TypeCalon

  pemilih VotingCalon[]
}

model VotingCalon {
  calon_id String
  user_id  String
  Pemilih  Pemilih @relation(fields: [user_id], references: [id])
  Calon    Calon   @relation(fields: [calon_id], references: [id])

  @@id([calon_id, user_id])
}
